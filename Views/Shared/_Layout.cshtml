<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AhadiyyaMVC</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AhadiyyaMVC.styles.css" asp-append-version="true" />
</head>
@{
    var roleId = Context.Session.GetInt32("RoleId");
}
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ahadiyya Management</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <div class="collapse navbar-collapse">
                                @* SuperAdmin sees everything *@
                                @if (roleId == 1)
                                {
                                    <li class="nav-item"><a class="nav-link" asp-controller="District" asp-action="Index">Districts</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Branch" asp-action="Index">Branches</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Staff" asp-action="Index">Staff</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Index">Users</a></li>
                                }
                                else if (roleId == 2) // District Admin
                                {
                                    <li class="nav-item"><a class="nav-link" asp-controller="Branch" asp-action="Index">Branches</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Staff" asp-action="Index">Staff</a></li>
                                }
                                else if (roleId == 3) // Branch Admin
                                {
                                    <li class="nav-item"><a class="nav-link" asp-controller="Staff" asp-action="Index">Staff</a></li>
                                }
                            </ul>

                            <ul class="navbar-nav">
                                <li class="nav-item">
                            <span class="navbar-text me-3">السلام عليكم, @Context.Session.GetString("Username")</span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
                                </li>
                            </ul>
                        </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AhadiyyaMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
