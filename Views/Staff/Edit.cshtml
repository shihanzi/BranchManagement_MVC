@model AhadiyyaMVC.Models.Staff
@{
    ViewData["Title"] = "Edit Staff";
}

<h2>Edit Staff</h2>

<form asp-controller="Staff" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="EducationalQualifications"></label>
        <input asp-for="EducationalQualifications" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="HandlingClasses"></label>
        <input asp-for="HandlingClasses" class="form-control" />
    </div>
    <!-- other fields same as Create -->
    <div class="mb-3">
        <label asp-for="DistrictId"></label>
        <select asp-for="DistrictId" class="form-control" asp-items="@(new SelectList(ViewBag.Districts, "Id", "Name"))"></select>
    </div>
    <div class="mb-3">
        <label asp-for="BranchId"></label>
        <select asp-for="BranchId" class="form-control" asp-items="@(new SelectList(ViewBag.Branches, "Id", "Name"))"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
