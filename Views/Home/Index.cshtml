@model List<AhadiyyaMVC.Models.Staff>

@{
    var roleId = Context.Session.GetInt32("RoleId");
    var sessionDistrict = Context.Session.GetInt32("DistrictId");
    var sessionBranch = Context.Session.GetInt32("BranchId");
}

<h2>Staff</h2>

<div class="mb-3">
    <a asp-controller="Staff" asp-action="Create" class="btn btn-success">Add Staff</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>District</th>
            <th>Branch</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int i = 1;
            foreach (var s in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@(s.FirstName) @(s.LastName)</td>
                    <td>@s.Phone</td>
                    <td>@s.Email</td>
                    <td>@s.District</td>
                    <td>@s.Branch</td>
                    <td>
                        @{
                            bool canEdit = false;

                            if (roleId == 1)  // Super Admin
                            {
                                canEdit = true;
                            }
                            else if (roleId == 2 && s.DistrictId == sessionDistrict) // District Admin
                            {
                                canEdit = true;
                            }
                            else if (roleId == 3 && s.BranchId == sessionBranch) // Branch Admin
                            {
                                canEdit = true;
                            }
                        }

                        @if (canEdit)
                        {
                            <a asp-controller="Staff" asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-primary">Edit</a>

                            <form asp-action="Delete" method="post" style="display:inline" onsubmit="return confirm('Delete this staff?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@s.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        }
                    </td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr><td colspan="7" class="text-center">No staff found.</td></tr>
        }
    </tbody>
</table>
