@model List<AhadiyyaMVC.Models.Staff>
@{
    ViewData["Title"] = "Staff";
}
<h2>Staff</h2>

<div class="mb-3">
    <a asp-controller="Staff" asp-action="Create" class="btn btn-success">Add Staff</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Full Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>District</th>
            <th>Branch</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int i = 1;
            foreach (var s in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@(s.FirstName) @(s.LastName)</td>
                    <td>@s.Phone</td>
                    <td>@s.Email</td>
                    <td>@s.DistrictId</td>
                    <td>@s.BranchId</td>
                    <td>
                        <a asp-controller="Staff" asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-primary">Edit</a>
                        <form asp-controller="Staff" asp-action="Delete" style="display:inline" asp-route-id="@s.Id" onsubmit="return confirm('Delete this staff?');">
                            <input type="hidden" name="id" value="@s.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            @Html.AntiForgeryToken()
                        </form>
                    </td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr><td colspan="7" class="text-center">No staff found.</td></tr>
        }
    </tbody>
</table>
