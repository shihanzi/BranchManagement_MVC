@model List<AhadiyyaMVC.Models.Staff>

@{
    Layout = "_Layout"; // optional, or you can keep Layout=null if you don't have a layout yet
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Dashboard - Ahadiyya School</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f7fa;
        }

        .dashboard-header {
            margin: 30px 0 20px;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 4px 25px rgba(0,0,0,0.05);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="dashboard-header">
            <h2>Welcome, @Context.Session.GetString("FirstName")</h2>
        </div>
        <a asp-controller="Staff" asp-action="Create" class="btn btn-success mb-3">
            Add Staff
        </a>
        <div class="card p-3 mb-4">
            <h5 class="card-title">Staff List</h5>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Full Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Class</th>
                            <th>District</th>
                            <th>Branch</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            int count = 1;
                            foreach (var user in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@user.FirstName @user.LastName</td>
                                    <td>@user.Phone</td>
                                    <td>@user.Email</td>
                                    <td>@user.HandlingClasses</td>
                                    <td>@user.DistrictId</td>
                                    <td>@user.BranchId</td>
                                    
                                </tr>
                                count++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">No users found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>
