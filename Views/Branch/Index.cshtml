@model List<AhadiyyaMVC.Models.Branch>
@{
    ViewData["Title"] = "Branches";
    int? roleId = Context.Session.GetInt32("RoleId");
    int? sessionDistrict = Context.Session.GetInt32("DistrictId");
}

<h2>Branches</h2>

<div class="mb-3">
    <a asp-controller="Branch" asp-action="Create" class="btn btn-success">Add Branch</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>District</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int i = 1;
            foreach (var b in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@b.Name</td>
                    <td>@b.DistrictName</td>
                    <td>
                        @{
                            bool canEdit = false;
                            if (roleId == 1) canEdit = true; // Super
                            else if (roleId == 2 && sessionDistrict.HasValue && b.DistrictId == sessionDistrict.Value) canEdit = true; // District Admin
                        }
                        @if (canEdit)
                        {
                            <a asp-controller="Branch" asp-action="Edit" asp-route-id="@b.Id" class="btn btn-sm btn-primary">Edit</a>
                            <form asp-action="Delete" method="post" style="display:inline" onsubmit="return confirm('Delete this branch?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@b.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-secondary" disabled>Not allowed</button>
                        }
                    </td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr><td colspan="4" class="text-center">No branches found.</td></tr>
        }
    </tbody>
</table>
